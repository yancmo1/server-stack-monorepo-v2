# Example nginx server configuration for yancmo.xyz
# Place this content in /etc/nginx/sites-available/yancmo.xyz
# Then create symlink: sudo ln -s /etc/nginx/sites-available/yancmo.xyz /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name yancmo.xyz www.yancmo.xyz;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name yancmo.xyz www.yancmo.xyz;
    
    # SSL Configuration (update paths to your certificates)
    ssl_certificate /etc/ssl/certs/yancmo.xyz.crt;
    ssl_certificate_key /etc/ssl/private/yancmo.xyz.key;
    
    # SSL Security
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    
    # Root directory for main site (if you have one)
    root /var/www/yancmo.xyz;
    index index.html index.htm;
    
    # Main site (optional)
    location / {
        try_files $uri $uri/ =404;
    }
    
    # Include dashboard configuration
    include /etc/nginx/sites-available/dashboard;
    
    # Logs
    access_log /var/log/nginx/yancmo.xyz.access.log;
    error_log /var/log/nginx/yancmo.xyz.error.log;
}
