# Prometheus Metrics - metrics.yancmo.xyz  
server {
    listen 80;
    listen [::]:80;
    server_name metrics.yancmo.xyz;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name metrics.yancmo.xyz;

    # SSL Configuration (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/metrics.yancmo.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/metrics.yancmo.xyz/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # IP restriction for admin access - Prometheus should be restricted
    allow 192.168.1.0/24;    # Local network
    allow 100.64.0.0/10;     # Tailscale
    deny all;

    # Rate limiting
    limit_req_zone $binary_remote_addr zone=metrics:10m rate=10r/m;
    limit_req zone=metrics burst=5 nodelay;

    location / {
        proxy_pass http://127.0.0.1:9090;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        
        # Prometheus-specific settings
        proxy_buffering off;
        proxy_request_buffering off;
        
        # Larger timeouts for complex queries
        proxy_connect_timeout 120s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
    }

    # Block access to admin API endpoints from external
    location ~ ^/(api/v1/(admin|config)|debug|flags) {
        allow 127.0.0.1;
        allow ::1;
        allow 100.64.0.0/10;     # Tailscale only
        deny all;
        
        proxy_pass http://127.0.0.1:9090;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Logging
    access_log /var/log/nginx/metrics.yancmo.xyz.access.log;
    error_log /var/log/nginx/metrics.yancmo.xyz.error.log;
}