FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    netcat-openbsd \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Ensure startup scripts are executable
RUN chmod +x wait-for-it.sh init_and_run.sh

# Create non-root user for security
RUN useradd -m -u 1000 racetracker

# Create uploads directory and set permissions
RUN mkdir -p uploads/photos && chown -R racetracker:racetracker /app
USER racetracker

EXPOSE 5555

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -fsS http://localhost:5555/health || exit 1

# Use init_and_run.sh as entrypoint for dev
ENTRYPOINT ["/app/init_and_run.sh"]
